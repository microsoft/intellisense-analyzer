{
    "compilerOptions": {
        "outDir": "../dist",
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./**/*"
    ]
}   